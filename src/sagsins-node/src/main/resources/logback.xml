<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">

  <!-- === Common Properties === -->
  <property name="LOG_DIR" value="logs" />
  <property name="APP_NAME" value="sagsins-node" />
  <property name="PATTERN_CONSOLE" value="%highlight(%-5level) %cyan(%d{HH:mm:ss.SSS}) [%thread] %green(%logger{20}) - %msg [req=%X{requestId}, pkt=%X{packetId}]%n%ex" />
  <property name="PATTERN_FILE" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg [req=%X{requestId}, pkt=%X{packetId}]%n%ex" />

  <!-- === Console Appender (with color) === -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${PATTERN_CONSOLE}</pattern>
    </encoder>
  </appender>

  <!-- === Rolling File Appender (compressed daily + size rotation) === -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/${APP_NAME}.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>50MB</maxFileSize>
      <maxHistory>30</maxHistory>
      <totalSizeCap>3GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>${PATTERN_FILE}</pattern>
    </encoder>
  </appender>

  <!-- === Separate Error Log Appender === -->
  <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/${APP_NAME}-error.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/${APP_NAME}-error.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${PATTERN_FILE}</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>ERROR</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
  </appender>

  <!-- === Async Appenders (boost performance) === -->
  <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="FILE" />
    <queueSize>5000</queueSize>
    <discardingThreshold>0</discardingThreshold>
  </appender>

  <appender name="ASYNC_ERROR" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="ERROR_FILE" />
    <queueSize>1000</queueSize>
    <discardingThreshold>0</discardingThreshold>
  </appender>

  <!-- === Root Logger === -->
  <root level="INFO">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="ASYNC_FILE" />
    <appender-ref ref="ASYNC_ERROR" />
  </root>

  <!-- === Fine-grained logging for app packages === -->
  <logger name="com.sagin" level="DEBUG" additivity="false">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="ASYNC_FILE" />
  </logger>

  <!-- Reduce noise from Spring and MongoDB -->
  <logger name="org.springframework" level="WARN" />
  <logger name="org.mongodb" level="WARN" />
  <logger name="org.apache" level="WARN" />
  <logger name="com.zaxxer.hikari" level="WARN" />

</configuration>
